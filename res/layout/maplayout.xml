<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/maplayout" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content">
 
    <com.google.android.maps.MapView 
        android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:enabled="true"
        android:clickable="true"
        android:apiKey="0pBtFhdRAc9DsBFFl1DdoLUO2KUwgGMNzWWfE2Q"
        />
        
        
     <Button android:id="@+id/MapButton01" 
		android:layout_height="80dip"
		android:background="@drawable/findlarge"
		android:text="Find friends"
		android:layout_marginLeft="20dip" 
		android:layout_alignParentBottom="true" 
		android:layout_width="80dip">
	</Button>
        
       
	
	<Button android:id="@+id/MapButton02" 
		android:text="Add to my locations"
		android:layout_height="80dip"
		android:background="@drawable/mylocation1"
		android:layout_alignBottom="@id/map" 
		android:layout_marginLeft="120dip"
		android:layout_width="80dip">
	</Button>
	
	<Button android:id="@+id/MapButton03" 
		android:text="Share ur loc!"
		android:layout_height="80dip"
		android:background="@drawable/locationicon"
		android:layout_alignBottom="@id/map" 
		android:layout_marginLeft="220dip"
		android:layout_width="100dip">
	</Button>
</RelativeLayout>
	
	
